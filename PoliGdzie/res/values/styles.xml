<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!--                     AutocompleteEdit do wyszukiwania            -->
    <style name="SearchEdit" >
       	<item name="android:layout_height">@dimen/search_edit_height</item> 
    	<item name="android:paddingBottom">5dp</item>
    </style>
    <style name="SearchEdit.Linear" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="SearchEdit.Image" >
       	<item name="android:background">#FFFFFF</item>
       	<item name="android:layout_width">@dimen/search_edit_height</item> 
       	<item name="android:adjustViewBounds">true</item>
       	<item name="android:scaleType">fitXY</item> 
    </style>
 	<style name="SearchEdit.Edit" >
       	<item name="android:background">#FFFFFF</item> 
       	<item name="android:completionThreshold">1</item> 
       	<item name="android:layout_width">0dp</item>
       	<item name="android:layout_weight">0.8</item>
    </style> 
 	<style name="SearchEdit.Map" >
       	<item name="android:layout_width">0dp</item>
       	<item name="android:layout_weight">0.2</item>
       	<item name="android:padding">0dp</item>
       	<item name="android:background">@drawable/map_ic</item>
    </style>
 	
    <!--                      PodpowiedÅº do autocomplete'a                      -->
	<style name="Prompt" >
	</style>
	<style name="Prompt.Linear" >
       	<item name="android:layout_height">wrap_content</item> 
    	<item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
	<style name="SearchEdit.Text" >
       	<item name="android:layout_height">@dimen/search_text_height</item>
       	<item name="android:text"></item>
    </style>

	<!--                      Info Window na google maps                 -->
	<style name="InfoWindow" >
        <item name="android:layout_height">@dimen/info_window_height</item> 
    </style>
    <style name="InfoWindow.Linear" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="InfoWindow.Image" >
        <item name="android:layout_width">@dimen/info_window_height</item> 
        <item name="android:adjustViewBounds">true</item>
       	<item name="android:scaleType">fitXY</item>
       	<item name="android:alpha">0.7</item>
    </style>
    <style name="InfoWindow.Button" >
        <item name="android:layout_width">match_parent</item> 
        <item name="android:textSize">@dimen/info_window_text_size</item> 
        <item name="android:minHeight">0dp</item> 
        <item name="android:minWidth">0dp</item> 
        <item name="android:layout_marginLeft">-5dip</item> 
        <item name="android:layout_marginRight">-5dip</item> 
        <item name="android:layout_marginTop">-5dip</item> 
        <item name="android:layout_marginBottom">-5dip</item> 
    </style>

    <!--                       Motyw aplikacji                       -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
    </style>
    <style name="AppTheme" parent="AppBaseTheme"> 
    </style>

</resources>
