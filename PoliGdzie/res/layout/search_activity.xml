<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:id="@+id/overlapLinear"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="#000000" >

		<Button
		    android:layout_weight="1"
		    android:id="@+id/button_trace"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Trasa" />
		<Button
		    android:layout_weight="1"
		    android:id="@+id/button_place"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Szukaj"/>

		<Button
		    android:layout_weight="1"
		    android:id="@+id/button_building"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Budynki" />
	    
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/searchLinear"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

		
		<LinearLayout
	        android:id="@+id/fragment_search_container"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	    >
	    </LinearLayout>
	    
	    <Button
	        android:id="@+id/goToMapButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Wyszukaj" />

	</LinearLayout>
</LinearLayout>
