<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginBottom="40px"
	    >
	    <EditText
        android:id="@+id/starting_point_text_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Twoja bieżąca lokalizacja" >
        
	    	<requestFocus />
    	</EditText>
    	
	    <TextView
	    android:id="@+id/starting_point_autocomplete"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="" />
    	
	    
	    
	    <EditText
        android:id="@+id/goal_point_text_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />
            
	    <TextView
	    android:id="@+id/goal_point_autocomplete"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="" />
<!-- 	    <Button
             android:id="@+id/button_start_point"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Punkt startowy" />
	    <Button
             android:id="@+id/button_stop_point"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Punkt docelowy" />
 -->	    </LinearLayout>
	    
	    <Button
	        android:id="@+id/button_search_trace"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Wyszukaj" />
	    
	    


</LinearLayout>
