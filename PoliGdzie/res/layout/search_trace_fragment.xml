<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="gone" >

    <ImageButton
            android:id="@+id/button_route_switch_fragment"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:background="@drawable/vertical_switch"
            android:contentDescription="S" />
    
    <RelativeLayout
        android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/button_search_trace"
        android:orientation="vertical" >
      
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_edit_height"
            android:orientation="horizontal" >

                <ImageView
                    android:background="#FFFFFF"
                    android:layout_height="@dimen/search_edit_height"
                    android:layout_width="@dimen/search_edit_height"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/z_nogps"
                    android:contentDescription="" />

                    <com.poligdzie.widgets.SearchAutoCompleteTextView
                        android:id="@+id/starting_point_text_edit"
                        android:background="#FFFFFF"
                        android:completionThreshold="1"
                        android:layout_height="@dimen/search_edit_height"
                        android:layout_width="match_parent"
                        android:hint="Skąd ?" >
                        <requestFocus />
                    </com.poligdzie.widgets.SearchAutoCompleteTextView>                 
			        
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_edit_height"
            android:orientation="horizontal" >

                <ImageView
                    android:background="#FFFFFF"
                    android:layout_height="@dimen/search_edit_height"
                    android:layout_width="@dimen/search_edit_height"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/do_nogps"
                    android:contentDescription="" />

                    <com.poligdzie.widgets.SearchAutoCompleteTextView
                        android:id="@+id/goal_point_text_edit"
                        android:background="#FFFFFF"
                        android:completionThreshold="1"
                        android:layout_height="@dimen/search_edit_height"
                        android:layout_width="match_parent"
                        android:hint="Dokąd ?" >
                        <requestFocus />
                    </com.poligdzie.widgets.SearchAutoCompleteTextView>                 
			        
        </LinearLayout>
        
    </LinearLayout>
    
    
           
	<ImageButton
          android:id="@+id/button_search_trace"
          android:layout_height="80dp"
             android:layout_width="80dp"
          android:background="@drawable/binoculars"
          android:layout_alignParentRight="true"
          android:text="Znajdź" />
	</RelativeLayout>
        
 </LinearLayout>       
