<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_route_switch_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="right"
            android:text="&lt;" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical" >

            <LinearLayout style="@style/SearchEdit.Linear" >

                <ImageView
                    style="@style/SearchEdit.Image"
                    android:src="@drawable/z_nogps" />

                <LinearLayout
                    style="@style/SearchEdit.Linear"
                    android:weightSum="1.0" >

                    <com.poligdzie.widgets.SearchAutoCompleteTextView
                        android:id="@+id/starting_point_text_edit"
                        style="@style/SearchEdit.Edit"
                        android:hint="Twoja bieżąca lokalizacja" >

                        <requestFocus />
                    </com.poligdzie.widgets.SearchAutoCompleteTextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/SearchEdit.Linear" >

                <ImageView
                    style="@style/SearchEdit.Image"
                    android:src="@drawable/do_nogps" />

                <LinearLayout
                    style="@style/SearchEdit.Linear"
                    android:weightSum="1.0" >

                    <com.poligdzie.widgets.SearchAutoCompleteTextView
                        android:id="@+id/goal_point_text_edit"
                        style="@style/SearchEdit.Edit" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_search_trace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="Wyznacz trasę" />
    </LinearLayout>

</LinearLayout>