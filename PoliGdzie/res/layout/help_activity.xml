<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <RelativeLayout 
        android:id="@+id/help_activity_relative"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_margin = "30dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_gravity="center">
	    <ScrollView 
	        android:id="@+id/help_activity_scroll_view"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_above="@+id/help_activity_gradient2" >
	       <LinearLayout 
		        android:id="@+id/help_activity_main_layout"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
		        
		        <TextView 
		            android:id="@+id/help_activity_name"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textStyle="bold"
		            android:gravity="center_horizontal|center_vertical"
		            android:textSize="17sp"
		            android:text="goggogogog"/>
		        <TextView 
		            android:id="@+id/help_activity_gradient"
		            android:layout_width="match_parent"
		            android:layout_height="1dp"
		            android:background="@drawable/gradient_white_gray_horizontal"/>
	
		        <TextView 
		            android:id="@+id/help_activity_description"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="lalalaladgfsfdgdsfglalala"/>
	    	</LinearLayout>   
	    </ScrollView>
	    <TextView 
		            android:id="@+id/help_activity_gradient2"
		            android:layout_width="match_parent"
		            android:layout_height="2dp"
		            android:layout_above="@+id/help_activity_button"
		            android:background="@drawable/gradient_white_gray_horizontal"/>
	    <Button 
	        android:id="@+id/help_activity_button"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_alignParentBottom="true"
	        android:text="Następna wskazówka"
	        android:background="@null"/>

    </RelativeLayout>

</LinearLayout>
